rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Stories collection
    match /artifacts/{appId}/public/data/stories/{storyId} {
      // Anyone can read published stories
      allow read: if resource.data.isPublished == true;
      // Owner can read their own stories
      allow read: if isOwner(resource.data.userId);
      // Owner can create/update their own stories
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
      
      // Public pages - readable by anyone for published stories
      match /pagesPublic/{pageId} {
        allow read: if get(/databases/$(database)/documents/artifacts/$(appId)/public/data/stories/$(storyId)).data.isPublished == true;
        allow read: if isOwner(get(/databases/$(database)/documents/artifacts/$(appId)/public/data/stories/$(storyId)).data.userId);
        allow write: if isOwner(get(/databases/$(database)/documents/artifacts/$(appId)/public/data/stories/$(storyId)).data.userId);
      }
      
      // Private pages - only owner can access
      match /pagesPrivate/{pageId} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/artifacts/$(appId)/public/data/stories/$(storyId)).data.userId);
      }
    }
    
    // User profiles
    match /artifacts/{appId}/users/{userId}/profile/data {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Transactions - NO public writes
    match /artifacts/{appId}/transactions/{txId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only via Cloud Functions
    }
    
    // Idempotency - NO public writes
    match /artifacts/{appId}/idempotency/{key} {
      allow read: if isAuthenticated();
      allow write: if false; // Only via Cloud Functions
    }
    
    // Platform data - NO public writes
    match /artifacts/{appId}/platform/{doc} {
      allow read: if isAuthenticated();
      allow write: if false; // Only via Cloud Functions
    }
  }
}

