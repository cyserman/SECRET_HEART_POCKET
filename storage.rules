rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Public obfuscated images - anyone can read
    match /public_obfuscated/{storyId}/{imageName} {
      allow read: if true; // Public read access
      allow write: if false; // Only via Cloud Functions
    }
    
    // Private original images - owner only
    match /private/stories/{storyId}/{userId}/{imageName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // User profile images
    match /users/{userId}/profile/{imageName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // Legacy path support (for existing images)
    // TODO: Migrate these to new structure
    match /users/{userId}/stories/{storyId}/{imageName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
  }
}

